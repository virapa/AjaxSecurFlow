# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ajax_proxy
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ajax_proxy

# Redis
REDIS_URL=redis://redis:6379/0

# Frontend API Connection (Next.js Public)
NEXT_PUBLIC_API_URL=https://api.ajaxsecurflow.com

# Ajax Systems API
AJAX_API_BASE_URL=https://api.ajax.systems/api/
AJAX_API_KEY=your_api_key_here
# Solo para dev y test
ENABLE_DEVELOPER_MODE=False
AJAX_LOGIN=user@example.com
AJAX_PASSWORD=your_ajax_password_here

# Security
SECRET_KEY=generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BACKEND_CORS_ORIGINS=["https://www.ajaxsecurflow.com"]
# Cookie Security (Milestone 2 - Hybrid Auth)
COOKIE_SECURE=True
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=.ajaxsecurflow.com
TRUST_PROXIES=False
FRONTEND_URL=https://www.ajaxsecurflow.com


# Admin Security (Ghost Admin + Master Key)
ADMIN_EMAILS=["admin@example.com"]
ADMIN_SECRET_KEY=generate_another_secure_key

# Stripe (SaaS Billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_BASIC=price_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_PREMIUM=price_...


# Celery (Task Queue)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# SMTP / Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=AjaxSecurFlow
SMTP_TLS=True

# Cache TTL Settings (in seconds) - Optional, defaults shown
# CACHE_TTL_HUBS=1800           # 30 minutes - Hub list
# CACHE_TTL_HUB_DETAIL=120      # 2 minutes - Hub state
# CACHE_TTL_DEVICES=600         # 10 minutes - Device list
# CACHE_TTL_DEVICE_DETAIL=30    # 30 seconds - Device telemetry
# CACHE_TTL_ROOMS=600           # 10 minutes - Rooms
# CACHE_TTL_GROUPS=600          # 10 minutes - Groups
